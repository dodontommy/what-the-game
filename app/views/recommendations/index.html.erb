<div class="max-w-7xl mx-auto">
  <!-- Header -->
  <div class="mb-8">
    <h1 class="text-4xl font-bold mb-4 gradient-text">AI Game Recommendations</h1>
    <p class="text-slate-400 text-lg">Discover your next favorite game with personalized AI-powered suggestions</p>
  </div>

  <!-- Recommendation Settings -->
  <div class="card p-6 mb-8">
    <div class="flex flex-col lg:flex-row items-start lg:items-center justify-between gap-4">
      <div>
        <h3 class="text-lg font-semibold text-white mb-2">Recommendation Preferences</h3>
        <p class="text-slate-400 text-sm">Customize what games you'd like to see based on your mood and available time</p>
      </div>
      <button class="btn-primary">Generate New Recommendations</button>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mt-6">
      <div>
        <label class="block text-sm font-medium text-slate-300 mb-2">Game Length</label>
        <select class="input-field">
          <option>Any Length</option>
          <option>Short (< 10 hours)</option>
          <option>Medium (10-30 hours)</option>
          <option>Long (30+ hours)</option>
        </select>
      </div>
      <div>
        <label class="block text-sm font-medium text-slate-300 mb-2">Mood</label>
        <select class="input-field">
          <option>Any Mood</option>
          <option>Relaxing</option>
          <option>Intense</option>
          <option>Story-Driven</option>
          <option>Competitive</option>
        </select>
      </div>
      <div>
        <label class="block text-sm font-medium text-slate-300 mb-2">Genre</label>
        <select class="input-field">
          <option>All Genres</option>
          <option>Action</option>
          <option>Adventure</option>
          <option>RPG</option>
          <option>Strategy</option>
          <option>Puzzle</option>
        </select>
      </div>
    </div>
  </div>

  <!-- Recommendations Grid -->
  <div id="recommendations-list">
    <% if @recommendations && @recommendations.any? %>
      <div class="space-y-6">
        <% @recommendations.each_with_index do |recommendation, index| %>
          <div class="card-hover p-6">
            <div class="flex items-start gap-4 mb-4">
              <div class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-blue-500 to-purple-600 rounded-full flex items-center justify-center text-white font-bold text-xl">
                #<%= index + 1 %>
              </div>
              <div class="flex-1">
                <div class="flex flex-col md:flex-row md:items-start md:justify-between mb-2">
                  <%= link_to recommendation.game.name, game_path(recommendation.game), class: "text-2xl font-bold text-white hover:text-blue-400 transition-colors duration-200" %>
                  <div class="flex items-center gap-2 mt-2 md:mt-0">
                    <span class="px-3 py-1 bg-green-900/50 text-green-400 border border-green-700 rounded-full text-sm font-medium">
                      <%= recommendation.score %>% Match
                    </span>
                  </div>
                </div>
                <p class="text-slate-400 text-sm"><%= recommendation.game.platform&.titleize || "Multiple Platforms" %></p>
              </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
              <!-- Game Image -->
              <div class="w-full h-48 bg-gradient-to-br from-slate-700 to-slate-800 rounded-lg flex items-center justify-center">
                <svg class="w-16 h-16 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>

              <!-- Recommendation Details -->
              <div class="md:col-span-2 space-y-4">
                <!-- Reason -->
                <div>
                  <h4 class="text-sm font-semibold text-slate-300 mb-2">Why We Recommend This</h4>
                  <p class="text-slate-400 text-sm leading-relaxed">
                    <%= recommendation.reason.present? ? recommendation.reason : "Based on your gaming preferences and play history, we think you'll enjoy this game. It matches your favorite genres and playstyle." %>
                  </p>
                </div>

                <!-- Stats -->
                <div class="flex flex-wrap gap-6 text-sm text-slate-400">
                  <% if recommendation.game.playtime_minutes.present? %>
                    <div class="flex items-center gap-2">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                      </svg>
                      <span>~<%= recommendation.game.playtime_minutes / 60 %> hours</span>
                    </div>
                  <% end %>
                  <% if recommendation.game.release_date.present? %>
                    <div class="flex items-center gap-2">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                      </svg>
                      <span><%= recommendation.game.release_date.strftime("%Y") if recommendation.game.release_date.respond_to?(:strftime) %></span>
                    </div>
                  <% end %>
                  <% if recommendation.game.genre.present? %>
                    <div class="flex items-center gap-2">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
                      </svg>
                      <span><%= recommendation.game.genre %></span>
                    </div>
                  <% end %>
                </div>

                <!-- Actions -->
                <div class="flex gap-3 pt-2">
                  <%= link_to game_path(recommendation.game), class: "btn-primary px-4 py-2 text-sm" do %>
                    View Details
                  <% end %>
                  <button class="btn-secondary px-4 py-2 text-sm">Add to Library</button>
                  <button class="btn-secondary px-4 py-2 text-sm">Not Interested</button>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Load More -->
      <div class="text-center mt-8">
        <button class="btn-secondary px-8 py-3">Load More Recommendations</button>
      </div>
    <% else %>
      <!-- Empty State -->
      <div class="card p-12 text-center">
        <div class="w-20 h-20 bg-gradient-to-br from-blue-500 to-purple-600 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-semibold text-white mb-2">No Recommendations Yet</h3>
        <p class="text-slate-400 mb-6">Connect your gaming accounts and add some games to your library to get personalized recommendations</p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <button class="btn-primary">Connect Accounts</button>
          <%= link_to "Browse Games", games_path, class: "btn-secondary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
