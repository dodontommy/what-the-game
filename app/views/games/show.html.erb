<div class="max-w-6xl mx-auto">
  <!-- Back Button -->
  <div class="mb-6">
    <%= link_to games_path, class: "inline-flex items-center text-slate-400 hover:text-white transition-colors duration-200" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
      Back to Games
    <% end %>
  </div>

  <% if @game %>
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Game Image and Quick Actions -->
      <div class="lg:col-span-1">
        <div class="card p-0 overflow-hidden sticky top-24">
          <!-- Game Cover -->
          <div class="w-full h-96 bg-gradient-to-br from-slate-700 to-slate-800 flex items-center justify-center">
            <svg class="w-24 h-24 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          
          <!-- Quick Actions -->
          <div class="p-6 space-y-3">
            <button class="btn-primary w-full">Add to Library</button>
            <button class="btn-secondary w-full">Mark as Playing</button>
            <button class="btn-secondary w-full">Add to Wishlist</button>
          </div>
        </div>
      </div>

      <!-- Game Details -->
      <div class="lg:col-span-2 space-y-6">
        <!-- Header -->
        <div>
          <h1 class="text-4xl font-bold mb-4 text-white"><%= @game.name %></h1>
          <div class="flex flex-wrap gap-4 text-slate-400">
            <% if @game.developer.present? %>
              <div class="flex items-center gap-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                </svg>
                <span><%= @game.developer %></span>
              </div>
            <% end %>
            <% if @game.release_date.present? %>
              <div class="flex items-center gap-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                <span><%= @game.release_date.strftime("%B %d, %Y") if @game.release_date.respond_to?(:strftime) %></span>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Stats -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
          <div class="card p-4">
            <div class="text-slate-400 text-sm mb-1">Playtime</div>
            <div class="text-2xl font-bold text-white">
              <%= @game.playtime_minutes.present? ? "#{@game.playtime_minutes / 60}h" : "0h" %>
            </div>
          </div>
          <div class="card p-4">
            <div class="text-slate-400 text-sm mb-1">Platform</div>
            <div class="text-2xl font-bold text-white">
              <%= @game.platform&.titleize || "N/A" %>
            </div>
          </div>
          <div class="card p-4">
            <div class="text-slate-400 text-sm mb-1">Status</div>
            <div class="text-2xl font-bold text-white">
              <%= @game.completion_status&.titleize || "Not Started" %>
            </div>
          </div>
          <div class="card p-4">
            <div class="text-slate-400 text-sm mb-1">Rating</div>
            <div class="text-2xl font-bold text-white">N/A</div>
          </div>
        </div>

        <!-- Description -->
        <div class="card p-6">
          <h2 class="text-2xl font-bold mb-4 text-white">About This Game</h2>
          <% if @game.description.present? %>
            <p class="text-slate-300 leading-relaxed"><%= @game.description %></p>
          <% else %>
            <p class="text-slate-400 italic">No description available for this game.</p>
          <% end %>
        </div>

        <!-- Tags/Genres -->
        <div class="card p-6">
          <h2 class="text-2xl font-bold mb-4 text-white">Genres & Tags</h2>
          <div class="flex flex-wrap gap-2">
            <% if @game.genre.present? %>
              <span class="px-4 py-2 bg-slate-700 rounded-full text-slate-300"><%= @game.genre %></span>
            <% else %>
              <p class="text-slate-400 italic">No genres specified</p>
            <% end %>
          </div>
        </div>

        <!-- Additional Info -->
        <div class="card p-6">
          <h2 class="text-2xl font-bold mb-4 text-white">Additional Information</h2>
          <dl class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <% if @game.achievements_total.present? && @game.achievements_total > 0 %>
              <div>
                <dt class="text-slate-400 text-sm mb-1">Achievements</dt>
                <dd class="text-white font-medium">
                  <%= @game.achievements_unlocked || 0 %> / <%= @game.achievements_total %>
                </dd>
              </div>
            <% end %>
            <% if @game.last_played.present? %>
              <div>
                <dt class="text-slate-400 text-sm mb-1">Last Played</dt>
                <dd class="text-white font-medium">
                  <%= @game.last_played.strftime("%B %d, %Y") if @game.last_played.respond_to?(:strftime) %>
                </dd>
              </div>
            <% end %>
            <% if @game.install_size.present? %>
              <div>
                <dt class="text-slate-400 text-sm mb-1">Install Size</dt>
                <dd class="text-white font-medium"><%= @game.install_size %></dd>
              </div>
            <% end %>
          </dl>
        </div>
      </div>
    </div>
  <% else %>
    <div class="card p-12 text-center">
      <h2 class="text-2xl font-bold text-white mb-4">Game Not Found</h2>
      <p class="text-slate-400 mb-6">The game you're looking for doesn't exist or has been removed.</p>
      <%= link_to "Back to Games", games_path, class: "btn-primary" %>
    </div>
  <% end %>
</div>
